<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KamMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KamMobile.Views"
    FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Text Agent"
        ContentTemplate="{DataTemplate local:ChatVapiPage}"
        Route="ChatVapiPage" />

    <ShellContent
        Title="AI Chat"
        ContentTemplate="{DataTemplate local:ChatAIPage}"
        Route="ChatAIPage" />

    <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate local:ChatPage}"
        Route="ChatPage" />

</Shell>
